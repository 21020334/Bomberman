<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="uet.oop.bomberman.scene.Lobby">
    <children>
        <ImageView fitHeight="400.0" fitWidth="800.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../lobbyTexture/2.png" />
            </image>
        </ImageView>
        <ImageView fitHeight="306.0" fitWidth="263.0" layoutX="88.0" layoutY="105.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../lobbyTexture/3.png" />
            </image>
        </ImageView>
        <ImageView fitHeight="217.0" fitWidth="354.0" layoutX="49.0" layoutY="-3.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../lobbyTexture/1.png" />
            </image>
        </ImageView>
        <ImageView fitHeight="376.0" fitWidth="307.0" layoutX="410.0" layoutY="24.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../lobbyTexture/4.png" />
            </image>
        </ImageView>
        <VBox alignment="CENTER" layoutX="469.0" layoutY="65.0" prefHeight="269.0" prefWidth="205.0" AnchorPane.rightAnchor="125.66666666666663">
            <children>
                <Button fx:id="ButtonPlay"
                        focusTraversable="false"
                        mnemonicParsing="false"
                        onMouseClicked="#PLAY"
                        onMouseEntered="#setEffect"
                        onMouseExited="#removeEffect"
                        prefHeight="56.0" prefWidth="144.0"
                        style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fitHeight="61.0" fitWidth="147.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="/textures/new_game.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="ButtonOption"
                        focusTraversable="false"
                        mnemonicParsing="false"
                        onMouseClicked="#setMusic"
                        onMouseEntered="#setEffect"
                        onMouseExited="#removeEffect"
                        style="-fx-background-color: transparent;"
                        textFill="TRANSPARENT">
                    <font>
                        <Font size="1.0" />
                    </font>
                    <graphic>
                        <ImageView fitHeight="59.0" fitWidth="137.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../lobbyTexture/6.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="ButtonQuit" focusTraversable="false" mnemonicParsing="false" onMouseClicked="#QUIT" onMouseEntered="#setEffect" onMouseExited="#removeEffect" style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fitHeight="60.0" fitWidth="161.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="/textures/quit.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button
                        fx:id="ButtonHighScore"
                        focusTraversable="false"
                        mnemonicParsing="false"
                        onMouseDragged="#RANK"
                        onMouseEntered="#setEffect"
                        onMouseExited="#removeEffect"
                        style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fitHeight="63.0" fitWidth="107.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../lobbyTexture/8.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>